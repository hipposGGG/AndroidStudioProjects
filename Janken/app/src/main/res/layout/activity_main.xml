<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/pa"
        android:layout_width="@dimen/size_hand"
        android:layout_height="@dimen/size_hand"
        android:layout_marginBottom="228dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:onClick="onJankenButtonTapped"
        android:scaleType="fitCenter"
        android:src="@mipmap/pa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/pa" />

    <ImageButton
        android:id="@+id/gu"
        android:layout_width="@dimen/size_hand"
        android:layout_height="@dimen/size_hand"
        android:layout_marginBottom="228dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:onClick="onJankenButtonTapped"
        android:scaleType="fitCenter"
        android:src="@mipmap/gu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/choki"
        app:layout_constraintStart_toEndOf="@+id/pa"
        app:srcCompat="@mipmap/gu" />

    <ImageButton
        android:id="@+id/choki"
        android:layout_width="@dimen/size_hand"
        android:layout_height="@dimen/size_hand"
        android:layout_marginBottom="228dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:onClick="onJankenButtonTapped"
        android:scaleType="fitCenter"
        android:src="@mipmap/choki"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@mipmap/choki" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:text="@string/Janken_text"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.12" />

</android.support.constraint.ConstraintLayout>